<Window x:Class="MultiThreadedApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MultiThreadedApp" Height="350" Width="500">
    <Grid>
        <StackPanel>
            <Button Content="Start Threads" Click="StartThreads_Click"/>
            <Button Content="Stop Threads" Click="StopThreads_Click"/>
            <ComboBox x:Name="PriorityComboBox" SelectedIndex="0">
                <ComboBoxItem Content="Lowest"/>
                <ComboBoxItem Content="BelowNormal"/>
                <ComboBoxItem Content="Normal"/>
                <ComboBoxItem Content="AboveNormal"/>
                <ComboBoxItem Content="Highest"/>
            </ComboBox>
            <TextBox x:Name="OutputTextBox" Height="200" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>

